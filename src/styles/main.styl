@import 'nib' // CSS3 extensions for Stylus: http://visionmedia.github.io/nib/

// variables!

slide_width = 100%
slide_height = 768px
slide_background = #129a6a

slide_transition_length = .6s
slide_transition_easing = ease
slide_transition_rotate_y = 90deg
// Safari bugs out on 3d transform-origins, so we have to fake it
slide_transition_nudge_x = -100px

bullet_transition_length = .3s
bullet_transition_easing = ease
bullet_transition_translate_x = 16px

// base

*
  box-sizing: border-box
  margin: 0
  padding: 0

@media print
  *
    -webkit-print-color-adjust: exact

@page
  size: landscape
  margin: 0

// bespoke.js layout styles

article
  display: none
  &.bespoke-parent
    display: block
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    overflow: hidden
    @media print
      overflow: visible
      position: static
    perspective: 600px

.bespoke-slide
  backface-visibility: hidden
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  text-align: center
  width: slide_width
  height: slide_height
  position: absolute
  top: 50%
  margin-top: (slide_height / 2) * -1
  left: 50%
  margin-left: (slide_width / 2) * -1
  background: slide_background
  padding: 40px
  border-radius: 0
  -webkit-backface-visibility: hidden
  -moz-backface-visibility: hidden
  -webkit-transform: translate3d(0, 0, 0)
  -moz-transform: translate3d(0, 0, 0)
  transform: translate3d(0, 0, 0)
  -webkit-transform-style: preserve-3d
  -moz-transform-style: preserve-3d
  transform-style: preserve-3d
  @media print
    zoom: 1 !important // disable bespoke-scale
    height: 743px // seems to correspond with an A4, landscape page height
    width: 100%
    page-break-before: always
    position: static
    margin: 0

.bespoke-before
  
.bespoke-after
  @media print
    transform: none

.bespoke-inactive
  opacity: 0
  visibility: hidden
  pointer-events: none
  @media print
    opacity 1

.bespoke-active
  opacity: 1
  visibility: visible

.fx-transitioning-in,
.fx-transitioning-out
  visibility: visible

// bespoke-bullet styles

.bespoke-bullet
  transition: all bullet_transition_length bullet_transition_easing

.bespoke-bullet-inactive
  opacity: 0
  li&
    transform: translateX(bullet_transition_translate_x)
  @media print
    opacity: 1

.bespoke-bullet-active
  opacity: 1

// bespoke-scale styles

.bespoke-scale-parent
  perspective: 600px
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  @media print
    transform: none !important

// bespoke-progress styles

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 2px
  @media only screen and (min-width: 1366px)
    height: 4px
  @media print
    display: none

.bespoke-progress-bar
  transition: width .6s ease
  position: absolute
  height: 100%
  background: #0089f3
  border-radius: 0 4px 4px 0

// bespoke-state styles

.emphatic,
.emphatic .bespoke-slide
  background: slide_background

// prism styles

pre
  padding: 26px !important
  border-radius: 8px

// content styles

body
  overflow : hidden;
  font-family: "Lato",helvetica, arial, sans-serif
  font-size: 24px
  color: #e9eaef
  background : #333333

h1
  font-size: 92px
  line-height: 82px
  letter-spacing: -2px
  margin-bottom: 16px

h2
  font-size: 72px
  letter-spacing: -1px
  margin-bottom: 8px

h3
  font-size: 48px
  font-weight: normal
  margin-bottom: 24px
  color: #eec186

hr
  visibility: hidden
  height: 20px

ul, #pengantar
  list-style: none

li
  margin-bottom: 12px
  text-align: left

p
  margin: 0 100px 12px
  line-height: 22px

a
  color: #0089f3
  text-decoration: none
  
#cover h3
  color: #f8dc86
  font-family:"Pacifico",sans-serif
	
#cover
  background:#2a2c77

@font-face
  font-family:Pacifico
  src: url('../font/Pacifico.ttf')

@font-face
  font-family:Lato
  src: url('../font/Lato.ttf')